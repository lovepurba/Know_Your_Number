<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <ImageView
        android:id="@+id/Img_title"
        android:layout_width="255dp"
        android:layout_height="217dp"
        android:layout_below="@+id/textView_title"
        android:layout_centerInParent="true"
        android:longClickable="false"
        android:src="@drawable/star11" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:text="Sagittarius"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        app:fontFamily="@font/small" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Img_title"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_contents"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textView_date"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="TextView"
        android:textSize="19sp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView_contents2"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textView_contents"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView_contents3"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textView_contents2"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:text="TextView"
        android:textAlignment="center"
        android:gravity="end"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

</RelativeLayout>